

pipeline {
    agent any

    parameters {
        choice(name: "VERSION", choices: ['1.1', '1.2', '1.3'], description: 'version')
        booleanParam(name: "executeTests", defaultValue: true, description: 'approve tests')
    }

    stages {

        stage ("init") {

            steps {
                script {
                    def rootDir = pwd()
                    def gv = load "${rootDir}/jenkins/script.groovy"
                }

            }
        }

        stage ("build") {

            steps {
                script {
                    def gv
                    gv.buildApp()
                }

            }
        }

        stage ("test") {

            steps {
                when {
                    expression {
                        params.executeTests
                    }
                }

                script {
                    gv.testApp()
                }

            }
        }

        stage ("deploy") {

            steps {
                script {
                    gv.deployApp()
                }

            }
        }
    }

}