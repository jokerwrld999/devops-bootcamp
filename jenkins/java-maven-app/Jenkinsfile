@Library('jenkins-shared-library')
def gv

pipeline {
    agent any
    environment {
        imageName='jokerwrld/java-maven-app:3.0'
    }
    stages {

        stage ("init") {
            steps {
                script {
                    gv = load 'stages.groovy'
                }
            }
        }
        stage ("build jar") {
            steps {
                script {
                    buildJar()
                }
            }
        }
        stage ("build image") {
            steps {
                script {
                    buildImage "$imageName"
                    dockerLogin
                    pushImage "$imageName"
                }
            }
        }
        stage ("deploy app") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
}
